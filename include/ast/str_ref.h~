#ifndef __ast_str_ref_h__
#define __ast_str_ref_h__

#include <stdlib.h>
#include <string.h>
#include <stdint.h>
#include <stdbool.h>
//#include <ofc/colstr.h>

typedef struct
{
	const char* base;
	unsigned    size;
} ofc_str_ref_t;

#define OFC_STR_REF_EMPTY (ofc_str_ref_t){ .base = NULL, .size = 0 }

#endif
